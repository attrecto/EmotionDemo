<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                tools:background="@android:color/black">

    <ImageView
        android:id="@+id/emoji_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        tools:src="@drawable/emoji_stuck_out_tongue_winking_eye"
    />

    <com.android.attrecto.emotiondemo.ui.widget.RobotoLightTextView
        android:id="@+id/emoji_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="24dp"
        android:layout_toRightOf="@id/emoji_img"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        tools:text="@string/stuck_out_tongue_winking_eye"
        tools:textColor="@android:color/white" />

</RelativeLayout>